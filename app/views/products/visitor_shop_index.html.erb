<div class="brand">CeleBrazil</div>
<div class="address-bar">440 College St | Toronto, ON M5T 1T3 | 123.456.7890</div>

<%= render 'layouts/navigation' %>

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Products Available to Order</strong>
                </h2>
                <hr>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="box">

          <% @products.each do |product| %>
            <div class="col-md-4 portfolio-item">
                <%= link_to image_tag(product.product_image.url(:medium)), product_path(product) %>
                <h4>
                    <p><h4 class="text-left"><span style="color: green"><%= product.title %></span></h4></p>
                    <p>Presentation: <%=product.portion.description %></p>
                    <p>>Price: <span style="color: green"><%= number_to_currency product.unit_price %></span></p>
                </h4>
            </div>
          <% end %>

        </div>
        
    </div>

</div>
<!-- /.container -->


